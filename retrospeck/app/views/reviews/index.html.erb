


<!-- <a href="/users/new">Create a new user</a> -->

<div class="row">
      <div class="col s6 m6 card-panel">
        <h5 class="blue-text text-darken-2 center-align">Recent Posts</h5>
      </div>

      <div class="col s6 m6 card-panel">
        <h5 class="blue-text text-darken-2 center-align">Trending Posts</h5>
      </div>
    <!-- MOST RECENTREVIEWS  + MOST LIKED REVIEWS-->

    <div class="row">
      <div id="left">


        <div class="col s6 m6">
          <% if @reviews.empty? %>
            <%= flash[:notice] %>
          <% else %>
          <% @reviews.each do |review| %>
          <div class="card">


            <div class="card-image waves-effect waves-block waves-light">
               <p class="card-content truncate"> <%= review['content']%></p>
            </div>

            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4"><%= review['title'] %><br><i class="material-icons right">more_vert</i></span>
                <p>
                  <a href='/reviews/<%= review['id'] %>'> Full Review </a>
                </p>
            </div>

            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4"><%= review['title'] %><i class="material-icons right">close</i></span>
                <p><%= review['content'] %></p>
                <br>
                <% @users.each do |user| %>
                  <% if user['id'] === review['user_id'] %>
                   <p>By:<a href="/users/<%= user['id'] %>"> <%= user['user_name'] %> </a></p>
                  <%end%>
                <%end%>
              </div>
            </div>
                <% end %>
              <% end %>

          <!-- CARD 2-->
        </div>
        <!-- RECENT REVIEW COLUMN  -->
      </div>
      <!-- RECENT REVIEWS -->

      <div id="right">
        <div class="col s6 m6">
          <!-- CARD 1-->
          <% @tweet.each do |tweet|%>
           <div class="card">
            <div class="card-image waves-effect waves-block waves-light">
              <p class="card-content"> <%= tweet['text']%> <%= tweet['user']['screen_name']%> </p>
              <p class="card-content"> <%= @yelp %></p>
              <p class="card-content">
              <% @walm.each do |review|%>
               Reviewer: <%= review['reviewer']%>
               Item: <%= review['name']%>
               <%= review['reviewText']%></p>
              <%end%>

            </div>

            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4"> You Trumpn Fam! <i class="material-icons right">more_vert</i></span>
              <p>
                <a href="#">Link to Article</a>
              </p>
            </div>

          </div>
          <% end %>
          <!-- CARD 2-->
        </div>
        <!-- LIKED REVIEW COLUMN  -->
      </div>
      <!-- LIKED REVIEWS -->
    </div>

  </div>
